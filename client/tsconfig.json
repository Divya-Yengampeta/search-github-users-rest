{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "es6",
		"jsx": "react",
		"allowJs": false,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"baseUrl": "./"
	},
	"lib": [
		"es6",
		"dom",
		"dom.iterable",
		"esnext"
	],
	"typeRoots": [
		"types",
		"node_modules/@types"
	],
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"types",
		"node_modules"
	]
}