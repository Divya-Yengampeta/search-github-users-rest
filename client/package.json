{
 "name": "search-github-users",
 "version": "0.1.0",
 "private": true,
 "jest": {
  "testEnvironment": "jsdom",
  "moduleNameMapper": {
   "\\.(css|scss)$": "<rootDir>/__mocks__/styleMock.ts",
   "@gql": "<rootDir>/src/Generated/gql"
  },
  "transform": {
   "^.+\\.tsx?$": "ts-jest"
  },
  "setupFiles": [
   "<rootDir>/test-setup.ts"
  ],
  "moduleFileExtensions": [
   "ts",
   "tsx",
   "js"
  ],
  "testMatch": [
   "**/*spec.(ts|tsx)",
   "**/*test.(ts|tsx)"
  ]
 },
 "dependencies": {
  "@testing-library/jest-dom": "^5.16.4",
  "bootstrap": "^4.6.1",
  "react": "^18.0.0",
  "react-dom": "^18.0.0",
  "react-router-dom": "^6.3.0",
  "react-scripts": "5.0.1",
  "web-vitals": "^2.1.4"
 },
 "scripts": {
  "start": "react-scripts start",
  "build": "react-scripts build",
  "test": "jest"
 },
 "eslintConfig": {
  "extends": [
   "react-app",
   "react-app/jest"
  ]
 },
 "browserslist": {
  "production": [
   ">0.2%",
   "not dead",
   "not op_mini all"
  ],
  "development": [
   "last 1 chrome version",
   "last 1 firefox version",
   "last 1 safari version"
  ]
 },
 "devDependencies": {
  "@testing-library/react": "^13.1.1",
  "@types/enzyme": "^3.10.12",
  "@types/enzyme-adapter-react-16": "^1.0.6",
  "@types/jest": "^27.4.1",
  "@types/react-router-dom": "^5.3.3",
  "enzyme": "^3.11.0",
  "enzyme-adapter-react-16": "^1.15.6",
  "jest": "^27.5.1",
  "ts-jest": "^27.1.4",
  "typescript": "^4.6.3"
 }
}
